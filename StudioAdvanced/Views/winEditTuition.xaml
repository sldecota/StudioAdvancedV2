<Window x:Class="StudioAdvanced.Views.winEditTuition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudioAdvanced.Views"
        mc:Ignorable="d"
        Title="Edit Tuition" Height="265" Width="450" Background="#FFBDCBC4" Loaded="Window_Loaded">
    <Grid>
        <ComboBox x:Name="cbxFamily" HorizontalAlignment="Left" Margin="48,53,0,0" VerticalAlignment="Top" Width="332" SelectionChanged="cbxFamily_SelectionChanged"/>
        <Label x:Name="lblFamily" Content="Family" HorizontalAlignment="Left" Margin="48,27,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTuitionAmount" HorizontalAlignment="Left" Height="23" Margin="159,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblTuition" Content="Tuition" HorizontalAlignment="Left" Margin="159,83,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="249,204,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="357,204,0,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>

    </Grid>
</Window>
