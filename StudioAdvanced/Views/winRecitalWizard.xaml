<Window x:Class="StudioAdvanced.Views.winRecitalWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudioAdvanced.Views"
        mc:Ignorable="d"
        Title="Recital Wizard" Height="525" Width="825" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" Background="#FFBDCBC4">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListView Grid.Column="1" Margin="10"> 

        </ListView>
        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
            <Button Name="btnRun" Content="Generate Recital List" Margin="5" />
            <Button Name="btnPrint" Content="Print Recital List" Margin="5"/>
            <Button Name="btnSave" Content="Save Recital List" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
