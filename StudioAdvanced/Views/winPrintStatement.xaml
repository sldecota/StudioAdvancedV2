<Window x:Class="StudioAdvanced.Views.winPrintStatement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:RV="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
        xmlns:local="clr-namespace:StudioAdvanced.Views"
        mc:Ignorable="d"
        Title="Print Statement" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <WindowsFormsHost Margin="0,31,0,14">
            <RV:ReportViewer x:Name="ReportStatement"></RV:ReportViewer>
        </WindowsFormsHost>
        <Button x:Name="btnEmail" Content="Email" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Width="75" Click="btnEmail_Click"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="23" Margin="90,1,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="400"/>
    </Grid>
</Window>
